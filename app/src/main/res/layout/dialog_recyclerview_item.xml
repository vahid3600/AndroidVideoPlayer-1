<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="videoPlayerDialogModel"
            type="com.user.exoplayer.player.util.videoplayerdialog.VideoPlayerDialogModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin"
        android:background="@drawable/item_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@{videoPlayerDialogModel.title}"
            android:textColor="#000"
            android:textDirection="rtl"
            android:textSize="@dimen/dialog_textview_size" />

        <RadioButton
            android:id="@+id/item_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/five_dp"
            android:checked="@{videoPlayerDialogModel.selected}" />

    </RelativeLayout>
</layout>